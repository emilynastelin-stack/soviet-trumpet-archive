<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Composers results</title>
  </head>
  <body>
    <main id="results">
      <header id="results-header" style="display:flex;align-items:center;gap:12px;justify-content:space-between;">
        <div style="display:flex;align-items:center;gap:8px;">
          <input id="qinput" type="search" aria-label="Search" placeholder="Search composers, countries, or pieces..." />
          <button id="clear-composer" style="display:none">Clear composer</button>
        </div>
        <div>
          <button id="langBtn">Language</button>
          <div id="langDropdown" class="lang-dropdown" style="display:none"></div>
        </div>
      </header>

      <div id="main-grid" style="display:flex;gap:16px;margin-top:16px;">
        <aside id="filters" style="width:260px;">
          <section id="filter-country"></section>
          <section id="filter-decade" style="margin-top:12px"></section>
          <section id="filter-type" style="margin-top:12px"></section>
        </aside>

        <section id="results-area" style="flex:1;">
          <div id="results-pagination-top"></div>
          <div id="results-list"></div>
        </section>

        <aside id="composer-panel" style="width:300px;">
          <div id="composer-content">Select a result to view composer details.</div>
        </aside>
      </div>
    </main>

    <script src="/composers-results.client.js" defer></script>
  </body>
</html>