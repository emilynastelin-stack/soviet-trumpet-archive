---
<header class="desktop-header">
  <div class="container nav">
    <!-- Left: Title + link -->
    <a href="https://soviettrumpetarchive.org"
       aria-label="Go to Archive of Soviet Trumpet Music homepage"
       title="Archive of Soviet Trumpet Music"
       class="header-logo">

      <span class="nav-english">Archive of Soviet Trumpet Music</span>
      <span class="nav-pipe">|</span>
      <span class="nav-russian" lang="ru">Архив советской трубной музыки</span>
    </a>

    <!-- Right: Language toggle placeholder -->
    <div class="lang-toggle">
      <button id="langBtn">EN ▾</button>
      <div class="lang-dropdown">
        <div class="lang-option">English</div>
        <div class="lang-option">Русский</div>
        <div class="lang-option">Deutsch</div>
      </div>
    </div>
  </div>
</header>

<!-- Mobile Topbar -->
<div class="mobile-topbar">
  <div class="mobile-topbar-inner">
    <div class="mobile-title">Archive of Soviet Trumpet Music</div>
    <button id="headerHamburger" aria-label="Open menu">☰</button>
  </div>
</div>

<!-- Mobile Navbar -->
<nav class="mobile-navbar" aria-label="Mobile Navigation">
  <ul class="mobile-nav-links">
    <li><a href="/">Home</a></li>
    <li><a href="/about">About</a></li>
    <li><a href="/sources">Sources</a></li>
    <li><a href="/contact">Contact</a></li>
  </ul>
</nav>

<style>
  :root { --accent:#8b0000; --muted:#6b7280; }

  /* Desktop header */
  .desktop-header {
    display: flex;
    position: fixed;
    left:0; right:0; top:0;
    height:50px;
    background:white;
    border-bottom:1px solid #eee;
    z-index:100005;
    align-items:center;
  }
  .desktop-header .container {
    display:flex;
    justify-content:space-between;
    align-items:center;
    width:100%;
    padding:0 20px;
    box-sizing:border-box;
  }
  .header-logo { display:flex; align-items:center; gap:6px; text-decoration:none; }
  .nav-english { color:var(--accent); font-weight:700; font-size:1.1rem; }
  .nav-pipe { color:black; font-weight:700; font-size:1.1rem; }
  .nav-russian { color:#6b7280; font-weight:700; font-size:1.1rem; font-family:'Segoe UI','Noto Sans',Arial,sans-serif; }

  .lang-toggle { position:relative; display:flex; align-items:center; }
  .lang-dropdown { display:none; position:absolute; top:110%; right:0; flex-direction:column; background:rgba(240,240,240,0.9); backdrop-filter:blur(2px); border:1px solid #ccc; border-radius:8px; padding:6px 0; min-width:120px; box-shadow:0 2px 8px rgba(0,0,0,0.1);}
  .lang-option { padding:6px 12px; color:#666; }

  /* Mobile topbar */
  .mobile-topbar { display:none; background:white; height:50px; align-items:center; justify-content:space-between; padding:0 16px; position:fixed; top:0; left:0; right:0; z-index:100006; }
  .mobile-topbar-inner { display:flex; justify-content:space-between; align-items:center; width:100%; }
  .mobile-title { font-weight:700; color:var(--accent); }

  /* Mobile navbar */
  .mobile-navbar {
    display:none;
    flex-direction:column;
    background:var(--accent);
    color:white;
    position:fixed;
    top:50px;
    left:0; right:0;
    z-index:100007;
    padding:12px 0;
  }
  .mobile-nav-links { list-style:none; margin:0; padding:0; }
  .mobile-nav-links li a { display:block; padding:10px 16px; color:white; text-decoration:none; }
  .mobile-nav-links li a:hover { background:rgba(255,255,255,0.1); }

  /* Media Queries */
  @media (max-width: 600px) {
    .desktop-header { display:none; }
    .mobile-topbar { display:flex; }
  }
</style>

<script is:inline>
  // Language dropdown
  const langBtn = document.getElementById('langBtn');
  const dropdown = document.querySelector('.lang-dropdown');
  langBtn?.addEventListener('click', e => {
    e.preventDefault();
    dropdown.style.display = (dropdown.style.display === 'flex') ? 'none' : 'flex';
  });

  // Mobile hamburger toggle
  const mobileNav = document.querySelector('.mobile-navbar');
  const hamburger = document.getElementById('headerHamburger');
  hamburger?.addEventListener('click', () => {
    if (!mobileNav) return;
    mobileNav.style.display = (mobileNav.style.display === 'flex') ? 'none' : 'flex';
  });
</script>
